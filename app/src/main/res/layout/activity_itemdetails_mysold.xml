<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#e6f5ff"
    tools:context=".itemdetails_mysold">

    <ImageView
        android:id="@+id/bookImgfullDetailsSold"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/bookNameFullDetailsSold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:textAlignment="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:padding="7dp"
        android:background="@drawable/itemfulldetailbackground">

        <TextView
            android:id="@+id/bookAuthorFullDetailsSold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000"
            />

        <TextView
            android:id="@+id/bookTypeFullDetailsSold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000"
            />

        <TextView
            android:id="@+id/bookSellingFullDetailsSold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/bookRentingFullDetailsSold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:textColor="#000"
                />
            <TextView
                android:id="@+id/renttimeFullDetailsSold"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="#000"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/bookAdressFullDetailsSold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:drawableLeft="@drawable/ic_baseline_location_on_24"/>

            <TextView
                android:id="@+id/bookZipcodeFullDetailsSold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000" />
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:padding="7dp"
        android:background="@drawable/itemfulldetailbackground">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:text="Book Seller"
            android:textAlignment="center"
            android:textSize="20dp"
            />

        <TextView
            android:id="@+id/userNameSold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000"
            />

        <TextView
            android:id="@+id/userEmailSold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000"
            />

        <TextView
            android:id="@+id/userPhoneSold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000"
            />
    </LinearLayout>
</LinearLayout>