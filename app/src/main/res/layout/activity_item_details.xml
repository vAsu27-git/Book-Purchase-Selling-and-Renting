<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#e6f5ff"
    android:id="@+id/mainlinear"
    tools:context=".ui.home.itemDetails">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/mainlinear1"
            android:padding="5dp"
            android:orientation="vertical">

    <ImageView
        android:id="@+id/bookImgfullDetails"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:layout_height="300dp"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/bookNameFullDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:padding="7dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/itemfulldetailbackground">

        <TextView
            android:id="@+id/bookAuthorFullDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000" />

        <TextView
            android:id="@+id/bookTypeFullDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000" />
        <TextView
            android:id="@+id/bookSellingFullDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
            android:id="@+id/bookRentingFullDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:textColor="#000" />
        <TextView
            android:id="@+id/renttimeFullDetails"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="#000"/>
        </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
        <TextView
            android:id="@+id/bookAdressFullDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp"
            android:drawableLeft="@drawable/ic_baseline_location_on_24"/>

        <TextView
            android:id="@+id/bookZipcodeFullDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000" />
</LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:padding="7dp"
        android:background="@drawable/itemfulldetailbackground">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:text="Book Seller"
            android:textAlignment="center"
            android:textSize="20dp"
            />

        <TextView
            android:id="@+id/userName"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:textColor="#000"
            />

        <TextView
            android:id="@+id/userEmail"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:textColor="#000"
            />

        <TextView
            android:id="@+id/userPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000"
            />
        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profileimgitemdetails"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="right"
            android:layout_marginTop="-75dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/man_icon"
            app:civ_border_width="2dp"
            app:civ_border_color="#fff"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_gravity="bottom"
        android:layout_marginLeft="10dp">

        <Button
            android:id="@+id/callButton"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:text="call" />

        <Button
            android:id="@+id/chatWp"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:text="Chat" />
    </LinearLayout>

    <ImageView
        android:id="@+id/addCartItemdetails"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="right"
        android:layout_marginTop="-668dp"
        android:layout_marginRight="7dp"
        android:src="@drawable/cart" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>