<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="5dp"
    app:cardCornerRadius="5dp"
    android:background="#3aa8c1"
    app:cardUseCompatPadding="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#6b778d">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/bookImgH"
                android:layout_width="match_parent"
                android:layout_height="120dp" />
            <ImageView
                android:id="@+id/deleteInSold"
                android:layout_marginRight="6dp"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/delete"
                android:layout_gravity="right"
                android:background="@drawable/circelimg"
                android:layout_marginTop="-114dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#acdbdf"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <TextView
                android:id="@+id/booknameH"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="bookname"
                android:textAlignment="center"
                android:autoSizeMaxTextSize="15dp"
                android:textColor="#000" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>