<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="5dp"
    app:cardCornerRadius="5dp"
    app:cardUseCompatPadding="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#6b778d">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/bookImgCart"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:contentDescription="TODO" />

            <ImageView
                android:id="@+id/deleteInCart"
                android:layout_marginEnd="6dp"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/delete"
                android:layout_gravity="right"
                android:background="@drawable/circelimg"
                android:layout_marginTop="-114dp"
                android:contentDescription="TODO" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#acdbdf"
            android:paddingBottom="10dp">
            <TextView
                android:id="@+id/booknameCart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="15dp"
                android:textAlignment="center"
                android:layout_marginBottom="5dp"
                android:autoSizeMaxTextSize="15dp"
                android:textStyle="bold"
                android:textColor="#000" />
            <TextView
                android:id="@+id/sellingPriceCartrow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#000"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/rentingPriceCartrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="15sp"
                android:layout_marginEnd="3dp"
                android:textColor="#000" />
            <TextView
                android:id="@+id/locationCartrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginTop="7dp"
                android:textSize="15dp"
                android:drawableLeft="@drawable/ic_baseline_location_on_24"
                android:layout_marginRight="3dp"
                android:textColor="#000" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>